<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" type="text/css" href="styles/dashboard-styles.css" />
    <title>Document</title>
  </head>
  <body>
    <header>
      <div class="logo-container"><span>Logo</span></div>
      <div class="profile-container">
        <div class="username-icon">
          <span
            ><img
              src="<%=user.profile  %>"
              alt="user profile photo"
              width="60px"
          /></span>
          <p><%=user.username %></p>
        </div>
        <div class="profile-detail"><%- include("partials/profile.ejs") %></div>
      </div>
    </header>

    <main>
      <div class="controls">
        <div class="add-folder">
          <button onclick="loadFolderForm()">Add Folder</button>
          <div id="folder-form"></div>
        </div>
        <div class="add-file">
          <button onclick="loadFileForm()">Add File</button>
          <div id="file-form"></div>
        </div>
      </div>
      <div id="main-container">
        <div id="folders"></div>
        <div id="files"></div>
      </div>
    </main>

    <script type="text/javascript" src="scripts/dashboardScripts.js"></script>
  </body>
</html>
